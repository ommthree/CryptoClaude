{
  "database": {
    "path": "cryptoClaude_development.db",
    "connection_pool_size": 5,
    "timeout_seconds": 10,
    "enable_wal_mode": false,
    "backup_interval_hours": 24
  },
  "api": {
    "cryptocompare": {
      "base_url": "https://min-api.cryptocompare.com/data",
      "timeout_seconds": 10,
      "retry_attempts": 2,
      "rate_limit_requests_per_minute": 50,
      "api_key_env_var": "CRYPTOCOMPARE_DEV_API_KEY"
    },
    "cryptonews": {
      "enabled": true,
      "timeout_seconds": 10,
      "rate_limit_requests_per_minute": 30
    },
    "claude_ai": {
      "enabled": true,
      "base_url": "https://api.anthropic.com/v1/messages",
      "model_name": "claude-3-5-sonnet-20240620",
      "timeout_seconds": 30,
      "retry_attempts": 3,
      "rate_limit_requests_per_minute": 60,
      "api_key_env_var": "CLAUDE_API_KEY"
    }
  },
  "logging": {
    "level": "DEBUG",
    "file_path": "logs/cryptoClaude_development.log",
    "max_file_size_mb": 50,
    "backup_count": 3,
    "enable_console": true
  },
  "security": {
    "api_key_encryption": false,
    "config_file_permissions": "644",
    "log_sensitive_data": true,
    "secure_temp_files": true
  },
  "performance": {
    "max_memory_usage_mb": 256,
    "cpu_usage_limit_percent": 90,
    "disk_space_warning_mb": 500,
    "health_check_interval_seconds": 120
  },
  "trading": {
    "max_position_size_usd": 100,
    "max_daily_trades": 10,
    "risk_limit_percent": 0.5,
    "emergency_stop_loss_percent": 2.0
  }
}